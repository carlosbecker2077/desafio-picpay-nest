// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  @@map("users")
  userId String @id
  name String
  document String @unique
  email String @unique
  password String
  phone String
  balance Float
  type String
  createdDate DateTime @default(now())
  updatedDate DateTime @updatedAt
}

model Transactions {
  @@map("transactions")
  id Int @id @default(autoincrement())
  amount Float
  senderId String
  receiverId String
  createdDate DateTime @default(now())
}
